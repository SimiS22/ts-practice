{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ],
    "compilerOptions": {
        "lib": [
            "ESNext",
            "ES7",
            "dom"
        ],
        "outDir": "build",
        "target": "ES5",
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "strictPropertyInitialization": true,
        "skipLibCheck": true,
    }
}